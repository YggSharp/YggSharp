<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:YggSharp.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="450"
        x:Class="YggSharp.UI.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="YggSharp Launcher"
        Height="450"
        Width="300"
        CanResize="False"
        SystemDecorations="Full"
        WindowStartupLocation="CenterScreen"
        PointerPressed="InputElement_OnPointerPressed">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Yggdrasil" FontSize="24" FontWeight="DemiBold" Foreground="LightGreen"/>
        <TextBlock Text="status text" HorizontalAlignment="Center"/>
        <Button HorizontalAlignment="Center" Content="Cancel"/>
    </StackPanel>
    
    
</Window>
